<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= treinador.nome %></title>
    <link rel="stylesheet" href="/css/treinador.css">
    <link rel="shortcut icon" href="/images/pokebola-logo.png" type="image/x-icon">
</head>
<body>
    <header>
        <div class="cabecalho">
            <a href="/">
                <img src="/images/pokemon-logo.svg" alt="Logo Pokemon" class="logo">
            </a>

            <nav>
                <p><a href="/">Início</a></p>
                <p><a href="/pokedex">Pokedex</a></p>
                <p><a href="/treinadores">Treinadores</a></p>
            </nav>
        </div>
    </header>

    <div class="treinador-details">
        <h1><%= treinador.nome %></h1>
        <h3>Pokémons:</h3>
        <div class="pokedex-treinador">
            <% treinador.pokedex.forEach(function(pokemon) { %>
                <h4><a href="/pokemon/<%= pokemon.id %>"><%= pokemon.nome %></a></h4>
            <% }); %>
        </div>
        <a href="/treinadores">Voltar aos Treinadores</a>
    </div>
</body>
</html>
